<resources>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App">
    </style>

    <style name="Theme.App.Splash" parent="Base.Theme.App">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:windowBackground">?colorPrimary</item>
    </style>

    <style name="Theme.App.Intro" parent="Base.Theme.App">
        <item name="introBackground">@color/intro_background_color</item>
        <item name="introBar">@color/intro_bar_color</item>
    </style>

    <style name="Theme.App.Splat" parent="Base.Theme.App">
        <item name="colorPrimary">@color/colorPrimarySplat</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSplat</item>
        <item name="colorSecondary">@color/colorSecondarySplat</item>
        <item name="android:windowBackground">@color/windowBackgroundSplat</item>
        <item name="fontFamily">@font/splatoon_2</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:statusBarColor">?colorSecondary</item>
    </style>

    <style name="Theme.App.Nook" parent="Base.Theme.App">
        <item name="colorPrimary">@color/colorPrimaryNook</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNook</item>
        <item name="colorSecondary">@color/colorSecondaryNook</item>
        <item name="colorError">@color/colorErrorNook</item>
        <item name="fontFamily">@font/nintendo_p_seurat</item>
    </style>

    <style name="ThemeOverlay.App.Splat.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/splatoon</item>
    </style>

</resources>
