<resources>

    <style name="Base.Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App">
    </style>

    <style name="Base.Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@android:color/background_light</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <style name="Theme.Splash" parent="Base.Theme.Splash">
    </style>

    <style name="Theme.App.Splash" parent="Base.Theme.App">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="splashImage">@drawable/ic_logo</item>
    </style>

    <style name="Theme.App.Splash.Splat" parent="Theme.App.Splat">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="splashImage">@drawable/ic_logo</item>
    </style>

    <style name="Theme.App.Splash.Nook" parent="Theme.App.Nook">
        <item name="android:statusBarColor">#685853</item>
        <item name="android:navigationBarColor">#685853</item>
        <item name="android:windowBackground">#685853</item>
        <item name="splashImage">@drawable/ic_nooklink</item>
    </style>

    <style name="Theme.App.Intro" parent="Base.Theme.App">
        <item name="introBackground">@color/intro_background_color</item>
        <item name="introBar">@color/intro_bar_color</item>
    </style>

    <style name="Theme.App.Splat" parent="Base.Theme.App">
        <item name="colorPrimary">@color/colorPrimarySplat</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDarkSplat</item>-->
        <item name="colorSecondary">@color/colorSecondarySplat</item>
        <item name="android:windowBackground">@color/windowBackgroundSplat</item>
        <item name="fontFamily">@font/splatoon_2</item>
        <item name="android:includeFontPadding">false</item>
        <!--<item name="android:statusBarColor">?colorSecondary</item>-->
    </style>

    <style name="Theme.App.Nook" parent="Base.Theme.App">
        <item name="colorPrimary">@color/colorPrimaryNook</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDarkNook</item>-->
        <item name="colorSecondary">@color/colorSecondaryNook</item>
        <item name="colorError">@color/colorErrorNook</item>
        <item name="fontFamily">@font/asia_ksdnr</item>
        <item name="backgroundColor">#AAA</item>
        <item name="foregroundColor">#CCC</item>
    </style>

    <style name="ThemeOverlay.App.Splat.ActionBar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="fontFamily">@font/splatoon</item>
    </style>

</resources>
